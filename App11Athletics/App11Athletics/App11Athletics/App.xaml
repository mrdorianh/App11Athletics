<?xml version = "1.0"
      encoding = "utf-8" ?>

<Application xmlns = "http://xamarin.com/schemas/2014/forms"
             xmlns:x = "http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class = "App11Athletics.App" >
    <Application.Resources>
        <!-- Application resource dictionary -->
        <ResourceDictionary>
            <OnPlatform x:Key = "MyPadding"
                        x:TypeArguments = "Thickness"
                        iOS = "0, 20, 0, 0"
                        Android = "0, 0, 0, 0" />
            <!--      Colors-->
            <Color x:Key = "ColorBrandGlobalBlue" > #005EBF </Color>
            <Color x:Key = "ColorBrandGlobalGreen" > #029902 </Color>
            <Color x:Key = "ColorBrandGlobalRed" > #DF0000 </Color>
            <!--      <ControlTemplate/>-->
            <ControlTemplate x:Key = "ControlTemplateFrameContainer" >
                <Grid>
                    <Frame HasShadow="False" />
                    <Frame Margin="4" BackgroundColor="White"  />
                    <ContentPresenter />
                </Grid>
            </ControlTemplate>
            <!--      Styles-->
            <Style TargetType = "Frame" >
                <Setter Property = "BackgroundColor"
                        Value = "{StaticResource ColorBrandGlobalBlue}" />
            </Style>
            <Style TargetType = "BoxView"
                   >
                <Setter Property = "Margin"
                        Value = "4" />
                <Setter Property = "Color"
                        Value = "White" />
                <Setter Property = "HorizontalOptions"
                        Value = "Fill" />
                <Setter Property = "VerticalOptions"
                        Value = "Fill" />
            </Style>
            <Style TargetType = "ContentPage" >
                <Setter Property = "Padding"
                        Value = "{StaticResource MyPadding}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>